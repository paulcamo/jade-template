// ---------------------------------------- //
// -------------- VIDEO SLIDER ------------ //
// ---------------------------------------- //

.video__slider
    width 633px
    float left
    margin 0 auto
    position relative
    padding 0 0 30px 0
    overflow hidden
    &:hover .video__slider__next-button
        right 0
    &:hover .video__slider__prev-button
        left 0

/* slider buttons */
.video__slider__next-button,
.video__slider__prev-button
    position absolute
    top 50%
    height 64%
    width 57px
    margin-top -22%
    background rgba(255,255,255,0.4);
    z-index 5
    transition opacity 0.3s, left 0.3s, right 0.3s
    text-indent -9999px
    
.video__slider__prev-button
    left -58px
    
.video__slider__next-button
    right -58px
    
.video__slider__next-button:after,
.video__slider__prev-button:after
    content ''
    display block
    position absolute
    top 50%
    left 50%
    border-top 15px solid transparent
    border-bottom 15px solid transparent
    margin -15px 0 0 -17px
    opacity 0.6
    
.video__slider__prev-button:after
    border-right 33px solid $white
    
.video__slider__next-button:after
    border-left 33px solid $white

/* slider container*/
.video__slider__container
    width 100%
    height 100%
    position relative
    overflow hidden
    
    iframe
        width 100%
        height 100%
        
        
/* slider items & list */
.video__slider__list,
.video__slider__item
    height 100%
    
.video__slider__list
    position absolute
    top 0
    left 0
    
.video__slider__item
    float left
    

/* slider dots */
.dots-list,
.video__slider__dots
    width 100%
    height 18px
    position absolute
    bottom 0
    left 0
    text-align center

.dots-item,
.video__slider__dots__item
    display inline-block
    width 10px
    height 10px
    margin 0 12px
    border-radius 50%
    background $black
    opacity 0.5
    
.dots-item.active,
.dots-item:hover,
.video__slider__dots__item:hover
    opacity 1

.share 
    display block
    

//- -------- TABLET & MOBILE ---------- //
@media (max-width: $size-tablet)
    .video__slider
        border none
        width 100%
        padding-top 0
        
        &:after,
        &:before
            content ''
            display block 
            width 40%
            height 50%
            position absolute
            top 28%
            z-index 4
            
        &:before
            left 0
            
        &:after
            right 0
        
    .video__slider__next-button,
    .video__slider__prev-button
        display none

            


















