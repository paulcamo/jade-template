// --------------------------------------------- //
$max-width = 600px
$max-height = 600px
$max-height-mobile = 400px


html,
body 
    width 100%
    height 100%
    
    & .blockScroll
        overflow hidden

.popup__shader
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 2
    

.popup__window
    max-width $max-width
    max-height $max-height
    min-width 200px
    min-height 100px
    background rgba(245, 238, 239, 0.9)
    position fixed
    top 50%
    left 50%
    z-index 4
    padding 46px 46px 20px
    box-shadow 0 0 10px rgba(0,0,0,.7)
    border-radius 10px
    text-align center
    +for_breakpoint(mobile)
        padding 20px 20px 10px
        max-height $max-height-mobile
        overflow-y scroll
    
.popup__window,
.popup__shader
    display none
    